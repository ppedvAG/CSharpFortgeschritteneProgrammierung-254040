<Window x:Class="AsyncAwaitWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="300"
		WindowStartupLocation="CenterScreen"
		ResizeMode="NoResize"
		Topmost="True">
	<StackPanel Margin="5">
		<Button Click="Button_Click" Content="Start"/>
		<Button Click="Button_Click_TaskRun" Content="Start Task.Run"/>
		<Button Click="Button_Click_Async" Content="Start Async"/>
		<Button Click="Request" Content="Webrequest starten" Name="ReqButton"/>
		<Button Click="Button_Click_AsyncDataSource" Content="Start Async Data Source"/>
		<ProgressBar Height="30" IsIndeterminate="True"/>
		<ScrollViewer x:Name="Scroll" Height="270">
			<TextBlock x:Name="Output"/>
		</ScrollViewer>
	</StackPanel>
</Window>
